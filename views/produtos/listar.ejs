    <!--conteudo principal-->
    <div class="flex-grow-1 p-4">
        <h1>Produtos</h1>
        <div>
            <a class="btn btn-primary" href="/produtos/cadastrar"><i class="fas fa-plus"></i> Cadastrar</a>
        </div>

        <div class="table-responsive" style="margin-top: 15px;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Preço de Venda</th>
                        <th>Estoque</th>
                        <th>Marca</th>
                        <th>Tipo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% lista.map(function(value, index) { %>
                        <tr>
                            <td><%= value.idProduto %></td>
                            <td><%= value.nomeProduto %></td>
                            <td><%= value.valorVenda %></td>
                            <td><%= value.qntdEstoque %></td>
                            <td><%= value.marca %></td>
                            <td><%= value.tipoProduto %></td>
                            <td><button class="btn btn-warning btn-sm">Editar</button>
                            <button class="btn btn-danger btn-sm">Excluir</button></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>


        </div>

    </div>
